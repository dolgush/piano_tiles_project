#include <vcl.h>
#pragma hdrstop

#include "Unit3.h"
#include "Unit1.h"
#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm2 *Form2;
int theme = 1;
//---------------------------------------------------------------------------
__fastcall TForm2::TForm2(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm2::Button1Click(TObject *Sender)
{
	if (ComboBox1->Text == "Minimal")
		theme = 1;
	if (ComboBox1->Text == "Light")
		theme = 2;
    if (ComboBox1->Text == "Minimal")
		theme = 1;
	if (ComboBox1->Text == "Light")
		theme = 2;
}
